{
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.tsbuildinfo",

    "lib": ["ES2020"],
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "types": ["node"],

    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "esModuleInterop": true
  },
  "include": ["packages"]
}
